<div class="card">
    <h1 class="card-country-name">{{name}}</h1>
  
  <div class="card-country-container">
    <div class="card-country-description">
      <p class="card-text"><b>Capital:</b> {{capital}}</p>
      <p class="card-text"><b>Population:</b> {{population}}</p>
      <p class="card-text"><b>Languages:</b></p>
      <ul class="list-languages-group"></ul>
      {{#each languages}}
        <li class="list-languages-item">{{name}}</li>
      {{/each}}
      </ul>
    </div>
    <img class="flag" src="{{flag}}" alt="{{name}}">
  </div>
</div>